<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Customer.CustDashboard">
    <ScrollView android:layout_height="wrap_content"
                android:layout_width="match_parent">
        <LinearLayout
                android:orientation="vertical" android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <Button
                    android:id="@+id/add_licence"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/btn_add_licence"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            <Button
                    android:id="@+id/add_vehicle"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/btn_add_vehicle"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/view_status"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/btn_view_stat"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/view_fine"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="View Fine"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/check_towed"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="Check for vehicle towed"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            <Button
                    android:id="@+id/traffic_division"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="Traffic Division"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            <Button
                    android:id="@+id/traffic_rto"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="RTO list"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/view_alert"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="View Alert"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            <Button
                    android:id="@+id/sign_out"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/btn_sign_out"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>